<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.fortmin.nfc.Opciones"
    tools:ignore="MergeRootFrame" >
    
      <TableLayout
   		 android:id="@+id/table1"
   		 android:layout_width="wrap_content"
  		 android:layout_height="wrap_content" 
  		 android:background="#000000"
  		 android:padding="5dip"
  		 android:layout_centerHorizontal="true">
     <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >	
       <ImageButton
         android:contentDescription="@string/desc"  
         android:id="@+id/grabarEmail"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="5dip"
         android:background="#000000"
         android:clickable="true"
         android:src="@drawable/btn_grabaremail"
        />

      <ImageButton
        android:contentDescription="@string/desc"
        android:id="@+id/grabarUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:padding="5dip"
        android:clickable="true"
         android:src="@drawable/btn_grabarurl" />
    </TableRow>
     <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

      <ImageButton
        android:contentDescription="@string/desc"
        android:id="@+id/grabarTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:padding="5dip"
        android:clickable="true"
        android:src="@drawable/btn_grabartelefono"
      
         />

    <ImageButton
        android:contentDescription="@string/desc"
        android:id="@+id/grabarSms"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:padding="5dip"
        android:clickable="true"
        android:src="@drawable/btn_grabarsms" />
    </TableRow>
     <ImageButton
        android:contentDescription="@string/desc"
        android:id="@+id/grabarIdPropietario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dip"
        android:clickable="true"
        android:background="#000000"
        android:src="@drawable/btn_grabartexto"/>
     </TableLayout>
    
</RelativeLayout>

