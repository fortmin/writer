<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FB9836"
    tools:context="com.fortmin.nfc.Opciones"
    tools:ignore="MergeRootFrame" >
    <FrameLayout 
        android:id="@+id/titulo2"
        android:layout_width="match_parent"
        android:layout_height="120dp" 
        android:background="@drawable/shopping">
     </FrameLayout>
    <ImageButton
        android:id="@+id/grabarEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo2"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:background="#FB9836"
         android:src="@drawable/btn_grabaremail"
       />

    <ImageButton
        android:id="@+id/grabarUrl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grabarEmail"
        android:background="#FB9836"
        android:layout_marginTop="10dp"
        android:clickable="true"
         android:src="@drawable/btn_grabarurl" />

    <ImageButton
        android:id="@+id/grabarTelefono"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grabarUrl"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:background="#FB9836"
        android:src="@drawable/btn_grabartelefono"
      
         />

    <ImageButton
        android:id="@+id/grabarSms"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grabarTelefono"
        android:background="#FB9836"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/btn_grabarsms" />
     <ImageButton
        android:id="@+id/grabarIdPropietario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grabarSms"
        android:clickable="true"
        android:background="#FB9836" 
        android:layout_marginTop="10dp"
        android:src="@drawable/btn_grabartexto"/>
    
</RelativeLayout>

